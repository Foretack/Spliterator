<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Spliterator</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Description>Simple extensions for no-copy split and iterate on spans, arrays and strings</Description>
    <Authors>Foretack</Authors>
    <license>MIT</license>
    <RepositoryUrl>https://github.com/Foretack/Spliterator</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
</Project>
